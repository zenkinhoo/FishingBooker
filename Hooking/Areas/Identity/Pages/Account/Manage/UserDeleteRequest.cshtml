@page
@model Hooking.Areas.Identity.Pages.Account.Manage.UserDeleteRequestModel
@{
}
<h4>Zahtev za brisanje naloga</h4>

<hr />
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="UserDeleteRequests">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Razlog za brisanje profila</label>
                <input  asp-for="Description" class="form-control" id="input" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Potvrdi" id="submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
