@model Hooking.Models.AdventureReservation

@{
    ViewData["Title"] = "Detalji avanture";
}

<h1>@ViewData["Title"]</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AdventureRealisationId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AdventureRealisationId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserDetailsId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserDetailsId)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Instruktor"))
    {
        if (!Model.IsReviewed)
        {<br />
            <a asp-controller="AdventureReservationReviews" asp-action="Create" asp-route-id="@Model.Id">Recenzija</a>
            <br />
        }
        else
        {
            <p>Ova rezervacija je već ocenjena!</p>
            <br />
        }
        <a asp-controller="InstructorNotAvailablePeriods" asp-action="Index">Nazad</a>
        <br />
    }
    else
    {

        <a asp-action="Index">Nazad</a>
    }
</div>
