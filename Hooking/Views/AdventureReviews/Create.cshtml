@model Hooking.Models.AdventureReview

@{
    ViewData["Title"] = "Create";
}
@{
    Adventure adv = (Adventure)ViewData["Adventure"];
    UserDetails userInstructor = (UserDetails)ViewData["UserInstructor"];

}

<h4>Recinzije za instruktora i njegove usluge</h4>
<hr />
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Naziv avanture
        </dt>
        <dd class="col-sm-10">
            @adv.Name
        </dd>
        <dt class="col-sm-2">
            Ime instruktora
        </dt>
        <dd class="col-sm-10">
            @userInstructor.FirstName
        </dd>
        <dt class="col-sm-2">
            Prezime instruktora
        </dt>
        <dd class="col-sm-10">
            @userInstructor.LastName
        </dd>
    </dl>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Review" class="control-label"></label>
                <input asp-for="Review" class="form-control" />
                <span asp-validation-for="Review" class="text-danger"></span>
            </div>
            <select class="form-control" asp-for="Grade" asp-validation-for="Grade" style="margin-bottom:15px;">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
            </select>

            <div class="form-group">
                <input type="submit" value="Oceni" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href='javascript:history.go(-1)'>Nazad</a>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
