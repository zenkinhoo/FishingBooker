@model Hooking.Models.DTO.AdventureDTO

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Adventure</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="InstructorId" class="form-control" hidden />
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Country" class="control-label"></label>
                <input asp-for="Country" class="form-control" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxPersonCount" class="control-label"></label>
                <input asp-for="MaxPersonCount" class="form-control" />
                <span asp-validation-for="MaxPersonCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CancellationPolicyId" class="control-label"></label>
                <input asp-for="CancellationPolicyId" class="form-control" />
                <span asp-validation-for="CancellationPolicyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChildFriendly" class="control-label"></label>
                <input asp-for="ChildFriendly" class="form-check" />
                <label asp-for="YouKeepCatch" class="control-label"></label>
                <input asp-for="YouKeepCatch" class="form-check" />
                <label asp-for="CatchAndReleaseAllowed" class="control-label"></label>
                <input asp-for="CatchAndReleaseAllowed" class="form-check" />
                <label asp-for="CabinSmoking" class="control-label"></label>
                <input asp-for="CabinSmoking" class="form-check" />
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="InstructorIndex" asp-route-instructorId ="@Model.InstructorId">Nazad</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
