@model Hooking.Models.DTO.DeleteRequestDTO

@{
    ViewData["Title"] = "Odgovor na zahtev";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RegisterAnswer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input hidden="hidden" asp-for="UserDetailsId" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input hidden="hidden" class="form-check-input" asp-for="IsApproved" />
            </div>
            <div class="form-group">
                <input hidden="hidden" asp-for="Type" class="form-control"></input>
            </div>
            <div class="form-group">
                <input type="submit" value="Odgovori" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Nazad</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}