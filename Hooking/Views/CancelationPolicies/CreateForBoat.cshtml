@model Hooking.Models.CancelationPolicy

@{
    ViewData["Title"] = "CreateForBoat";
}

<h4>Dodaj uslove otkazivanja</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateForBoat">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FreeUntil" class="control-label"></label>
                <input asp-for="FreeUntil" class="form-control" />
                <span asp-validation-for="FreeUntil" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PenaltyPercentage" class="control-label"></label>
                <input asp-for="PenaltyPercentage" class="form-control" />
                <span asp-validation-for="PenaltyPercentage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Potvrdi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
